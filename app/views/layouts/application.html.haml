!!! 5

%html
%head
  %meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
  %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
  %title Hoplite - Network device backup manager
  = csrf_meta_tag
  = include_stylesheets(:main)

%body
  #header.group
    .container_12
      .grid_9
        %ul#navigation
          %li= link_to("Devices", devices_path)
          %li= link_to("Login Profiles", login_profiles_path)
          %li= link_to("Backup Profiles", backup_profiles_path)

  #content.group
    .container_12
      - unless flash_messages(flash).blank?
        .grid_12
          #flash_messages= raw(flash_messages(flash))

      = yield

  #footer
    .container_12
      .grid_6
        %p Hoplite - Network device backup manager

      .grid_6.text-right
        %p= link_to("https://github.com/sniperd/hoplite", "https://github.com/sniperd/hoplite", :target => "_blank")

  = include_javascripts(:common)
  = yield(:javascript)
